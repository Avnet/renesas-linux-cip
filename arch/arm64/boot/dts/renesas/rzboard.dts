/*wifi*/
&sdhi1 {
       pinctrl-0 = <&sdhi1_pins>;
       pinctrl-1 = <&sdhi1_pins_uhs>;
       pinctrl-names = "default", "state_uhs";

       vmmc-supply = <&reg_3p3v>;
       max-frequency = <25000000>;
       pm-ignore-notify;
       keep-power-in-suspend;
       non-removable;
       cap-power-off-card;
       bus-width = <4>;
       mmc-pwrseq = <&wlan_pwrseq>;
       status = "okay";
};

&ehci0 {
	dr_mode = "otg";
	status = "okay";
};

&ehci1 {
	status = "okay";
};

&ohci1 {
	status = "okay";
};

&ohci0 {
	dr_mode = "otg";
	status = "okay";
};

&hsusb {
	dr_mode = "otg";
	status = "okay";
};

&usb2_phy1 {
	pinctrl-0 = <&usb1_pins>;
	pinctrl-names = "default";

	status = "okay";
};

&usb2_phy0 {
	pinctrl-0 = <&usb0_pins>;
	pinctrl-names = "default";

	vbus-supply = <&vbus0_5v>;
	status = "okay";
};

&eth0 {
	pinctrl-0 = <&eth0_pins>;
	pinctrl-names = "default";
	phy-handle = <&phy0>;
	phy-mode = "rgmii-id";
	status = "okay";

	phy0: ethernet-phy@4 {
		reg = <4>;
		reset-gpios = <&pinctrl RZG2L_GPIO(4, 1) GPIO_ACTIVE_LOW>;
		interrupt-parent = <&pinctrl>;
		interrupts = <RZG2L_GPIO(1, 0) IRQ_TYPE_EDGE_FALLING>;
	};
};
