/dts-v1/;
/plugin/;

#include <dt-bindings/pinctrl/pinctrl-rzg2l.h>

/* 40-pin extended GPIO, expanded into UART, SPI, I2C, PWM and other interfaces */

/ {
	compatible = "avnet,rzboard", "renesas,r9a07g054l2";

	fragment@0 {
		target = <&pinctrl>;
			__overlay__ {
				scif2_pins: scif2 {
				groups = "scif2_data_e";
				function = "scif2";
			};
		};
	};

	fragment@1 {
		target = <&scif2>;
		__overlay__ {
			pinctrl-0 = <&scif2_pins>;
			pinctrl-names = "default";
			status = "okay";
		};
	};
};
